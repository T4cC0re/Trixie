{
  "compileOnSave"  : true,
  "compilerOptions": {
    "module"                        : "commonjs",
    "target"                        : "es2017",
    "noImplicitAny"                 : true,
    "noImplicitReturns"             : true,
    "sourceMap"                     : true,
    "newLine"                       : "lf",
    "removeComments"                : true,
    "listFiles"                     : false,
    "declaration"                   : true,
    "declarationDir"                : "tsd",
    "noLib"                         : false,
    "outDir"                        : "lib",
    "strictNullChecks"              : false,
    "alwaysStrict"                  : true,
    "traceResolution"               : false,
    "noUnusedLocals"                : true,
    "noUnusedParameters"            : true,
    "noFallthroughCasesInSwitch"    : false,
    "allowUnusedLabels"             : true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck"                  : true,
    "lib"                           : ["es7"],
    "types"                         : ["node"]
  },
  "exclude"        : [
    "node_modules"
  ],
  "files"          : [
    "src/trixie.ts"
  ]
}