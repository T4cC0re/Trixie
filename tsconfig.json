{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "newLine": "lf",
    "removeComments": true,
    "listFiles": false,
    "declaration": true,
    "noLib": false,
    "strictNullChecks": false,
    "alwaysStrict": true,
    "traceResolution": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": false,
    "allowUnusedLabels": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "shared/Action.d.ts"
  ],
  "include": [
    "server/**/*.ts",
    "vmwareprobe/**/*.ts",
    "shared/**/*.ts"
  ]
}